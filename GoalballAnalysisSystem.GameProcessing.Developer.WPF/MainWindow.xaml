<Window x:Class="GoalballAnalysisSystem.GameProcessing.Developer.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoalballAnalysisSystem.GameProcessing.Developer.WPF"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"  
        xmlns:emgu="clr-namespace:Emgu.CV.UI;assembly=Emgu.CV.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel x:Name="VideoStackPanel">
                <WindowsFormsHost>
                    
                </WindowsFormsHost>
                <Image Width="480" Height="270"
                       Name="FrameImage"
                       />
                <WrapPanel HorizontalAlignment="Center">
                    <Button Content="Pause" Margin="10" Name="PauseButton"
                            Click="PauseButton_Click"/>
                    <Button Content="Resume" Margin="10" Name="ResumeButton"
                            Click="ResumeButton_Click"/>
                    <Button Content="Stop" Margin="10" Name="StopButton"
                            Click="StopButton_Click"/>
                </WrapPanel>
            </StackPanel>
        </Grid>
        <Button Grid.Row="1"
                Content="Select Video"
                HorizontalAlignment="Left"
                Click="SelectVideoButton_Click"
                Name="SelectVideoButton"/>
    </Grid>
</Window>
