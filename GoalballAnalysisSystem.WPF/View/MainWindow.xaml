<Window x:Class="GoalballAnalysisSystem.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoalballAnalysisSystem.View"
        xmlns:controls="clr-namespace:GoalballAnalysisSystem.WPF.Controls"
        mc:Ignorable="d"
        Title="Goalball Analysis System" Height="450" Width="800"
        Background="{StaticResource PrimaryBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <controls:NavigationBar DataContext="{Binding Navigator}"
                               Grid.Row="0"/>
        <ContentControl Content="{Binding Navigator.CurrentViewModel}"
                        Grid.Row="1"/>
    </Grid>
</Window>
