<Window x:Class="GoalballAnalysisSystem.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoalballAnalysisSystem.View"
        mc:Ignorable="d"
        Title="Goalball Analysis System" Height="450" Width="800"
        Background="DarkGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Content before page"
                   Grid.Row="0"/>
        <ContentControl Content="{Binding SelectedViewModel}"
                        Grid.Row="1"/>
        <TextBlock Text="Content after page"
                   Grid.Row="2"/>
      
    </Grid>
</Window>
